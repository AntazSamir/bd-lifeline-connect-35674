{
  "tech_stack": [
    "TypeScript",
    "React",
    "Supabase",
    "Tailwind CSS",
    "Vite",
    "Framer Motion",
    "Lucide React"
  ],
  "features": [
    {
      "name": "Blood Request System",
      "description": "Component and service for managing blood requests, including fetching paginated/filtered lists, creating new requests, and responding to existing ones.",
      "files": [
        "src/services/dbService.ts",
        "src/pages/RequestBlood.tsx",
        "src/pages/CreateRequest.tsx",
        "src/components/BloodRequestFeed.tsx"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Blood Request API",
          "version": "1.0.0"
        },
        "paths": {
          "/blood_requests": {
            "get": {
              "summary": "Retrieve a list of blood requests with optional filters",
              "parameters": [
                {
                  "name": "page",
                  "in": "query",
                  "schema": {
                    "type": "integer"
                  }
                },
                {
                  "name": "limit",
                  "in": "query",
                  "schema": {
                    "type": "integer"
                  }
                },
                {
                  "name": "bloodGroup",
                  "in": "query",
                  "schema": {
                    "type": "string"
                  }
                }
              ]
            },
            "post": {
              "summary": "Post a new blood request",
              "requestBody": {
                "content": {
                  "application/json": {
                    "schema": {
                      "type": "object",
                      "properties": {
                        "blood_group": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string"
                        },
                        "units_needed": {
                          "type": "integer"
                        },
                        "urgency": {
                          "type": "string"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "name": "Donor Discovery & Registration",
      "description": "Functionality to search for verified donors and for users to register themselves as blood donors.",
      "files": [
        "src/services/dbService.ts",
        "src/pages/FindDonors.tsx",
        "src/components/DonorRegistrationDialog.tsx"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Donor API",
          "version": "1.0.0"
        },
        "paths": {
          "/donors": {
            "get": {
              "summary": "Fetch list of donors"
            },
            "post": {
              "summary": "Register a donor profile"
            }
          }
        }
      }
    },
    {
      "name": "User Authentication & Onboarding",
      "description": "Supabase-powered authentication flow including email/password, Google OAuth, and mandatory profile completion for new users.",
      "files": [
        "src/services/dbService.ts",
        "src/pages/SignIn.tsx",
        "src/pages/SignUp.tsx",
        "src/pages/CompleteProfile.tsx",
        "src/pages/CheckEmail.tsx",
        "src/pages/EmailConfirmation.tsx"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Auth API",
          "version": "1.0.0"
        },
        "paths": {
          "/auth/signup": {
            "post": {
              "summary": "Register a new user"
            }
          },
          "/auth/signin": {
            "post": {
              "summary": "Authenticate a user"
            }
          }
        }
      }
    },
    {
      "name": "User Profile Management",
      "description": "Secure dashboard where users can manage their personal information, donation status, and notification preferences.",
      "files": [
        "src/services/dbService.ts",
        "src/pages/Profile.tsx",
        "src/components/EditProfileDialog.tsx"
      ],
      "api_doc": {
        "openapi": "3.0.0",
        "info": {
          "title": "Profile API",
          "version": "1.0.0"
        },
        "paths": {
          "/user_profiles/{id}": {
            "get": {
              "summary": "Get profile details"
            },
            "patch": {
              "summary": "Update profile details"
            }
          }
        }
      }
    }
  ]
}